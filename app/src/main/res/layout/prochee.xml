<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Общий"
        android:layout_marginTop="26dp"
        android:textSize="20sp"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/akchii"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Акции"
        android:layout_marginTop="26dp"
        android:textSize="20sp"
        android:minHeight="48dp" />
    <Button
        android:id="@+id/passwordEditTex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Облигации"
        android:layout_marginTop="26dp"
        android:textSize="20sp"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/passwordEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Валюта"
        android:layout_marginTop="26dp"
        android:textSize="20sp"
        android:minHeight="48dp" />


    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Золото"
        android:layout_marginTop="25dp"
        android:textSize="20sp"/> <!-- Без отступа для этой кнопки -->

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" /> <!-- Для отступа, чтобы кнопки были внизу -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/button_investment_tools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:text="Инструменты инвестиций" />

        <Button
            android:id="@+id/button_forecast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Прогноз" />

        <Button
            android:id="@+id/button_wallet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Кошелёк" />
    </LinearLayout>
</LinearLayout>


